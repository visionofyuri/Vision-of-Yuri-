        let currentLang = 'en';

        function setLanguage(lang) {
            currentLang = lang;
            
            // Update all text elements
            document.getElementById('subtitle').textContent = translations[lang].subtitle;
            document.getElementById('bio-text').innerHTML = translations[lang].bio;
            
            // Update navigation buttons
            document.querySelectorAll('.nav-btn').forEach((btn, index) => {
                const sections = ['navServices', 'navBooking', 'navCalendar', 'navAbout'];
                if (translations[lang][sections[index]]) {
                    btn.textContent = translations[lang][sections[index]];
                }
            });
            
            // Update section titles
            document.getElementById('services-title').textContent = translations[lang].servicesTitle;
            document.getElementById('booking-title').textContent = translations[lang].bookingTitle;
            document.getElementById('calendar-title').textContent = translations[lang].calendarTitle;
            document.getElementById('about-title').textContent = translations[lang].aboutTitle;
            
            // Update booking form
            document.getElementById('personal-info-title').textContent = translations[lang].personalInfoTitle;
            document.getElementById('fullname-label').textContent = translations[lang].fullnameLabel;
            document.getElementById('email-label').textContent = translations[lang].emailLabel;
            document.getElementById('phone-label').textContent = translations[lang].phoneLabel;
            document.getElementById('location-label').textContent = translations[lang].locationLabel;
            document.getElementById('birthdate-label').textContent = translations[lang].birthdateLabel;
            document.getElementById('intl-label').textContent = translations[lang].intlLabel;
            document.getElementById('intl-check-label').textContent = translations[lang].intlCheckLabel;
            
            document.getElementById('service-select-title').textContent = translations[lang].serviceSelectTitle;
            document.getElementById('service-type-label').textContent = translations[lang].serviceTypeLabel;
            document.getElementById('select-default').textContent = translations[lang].selectDefault;
            
            document.getElementById('discount-title').textContent = translations[lang].discountTitle;
            document.getElementById('discount-desc').textContent = translations[lang].discountDesc;
            document.getElementById('discount-ig-label').textContent = translations[lang].discountIgLabel;
            document.getElementById('discount-tiktok1-label').textContent = translations[lang].discountTiktok1Label;
            document.getElementById('discount-tiktok2-label').textContent = translations[lang].discountTiktok2Label;
            document.getElementById('upload-text').textContent = translations[lang].uploadText;
            
            document.getElementById('donation-title').textContent = translations[lang].donationTitle;
            document.getElementById('donation-desc').textContent = translations[lang].donationDesc;
            document.getElementById('donation-option-label').textContent = translations[lang].donationOptionLabel;
            document.getElementById('donation-type-label').textContent = translations[lang].donationTypeLabel;
            document.getElementById('donation-disaster-label').textContent = translations[lang].donationDisasterLabel;
            document.getElementById('donation-children-label').textContent = translations[lang].donationChildrenLabel;
            document.getElementById('donation-needy-label').textContent = translations[lang].donationNeedyLabel;
            document.getElementById('donation-amount-label').textContent = translations[lang].donationAmountLabel;
            
            document.getElementById('calculation-title').textContent = translations[lang].calculationTitle;
            document.getElementById('base-price-label').textContent = translations[lang].basePriceLabel;
            document.getElementById('addon-price-label').textContent = translations[lang].addonPriceLabel;
            document.getElementById('intl-fee-label').textContent = translations[lang].intlFeeLabel;
            document.getElementById('subtotal-label').textContent = translations[lang].subtotalLabel;
            document.getElementById('discount-label').textContent = translations[lang].discountLabel;
            document.getElementById('donation-label').textContent = translations[lang].donationLabel;
            document.getElementById('total-label').textContent = translations[lang].totalLabel;
            
            document.getElementById('payment-title').textContent = translations[lang].paymentTitle;
            document.getElementById('payment-desc').textContent = translations[lang].paymentDesc;
            document.getElementById('bank-title').textContent = translations[lang].bankTitle;
            document.getElementById('qris-text').textContent = translations[lang].qrisText;
            document.getElementById('transfer-date-label').textContent = translations[lang].transferDateLabel;
            document.getElementById('transfer-amount-label').textContent = translations[lang].transferAmountLabel;
            document.getElementById('payment-upload-text').textContent = translations[lang].paymentUploadText;
            
            document.getElementById('submit-btn').textContent = translations[lang].submitBtn;
            
            // Update calendar
            document.getElementById('today-btn').textContent = translations[lang].todayBtnText;
            document.getElementById('sun-header').textContent = translations[lang].sunHeader;
            document.getElementById('mon-header').textContent = translations[lang].monHeader;
            document.getElementById('tue-header').textContent = translations[lang].tueHeader;
            document.getElementById('wed-header').textContent = translations[lang].wedHeader;
            document.getElementById('thu-header').textContent = translations[lang].thuHeader;
            document.getElementById('fri-header').textContent = translations[lang].friHeader;
            document.getElementById('sat-header').textContent = translations[lang].satHeader;
            
            document.getElementById('legend-available').textContent = translations[lang].legendAvailable;
            document.getElementById('legend-booked').textContent = translations[lang].legendBooked;
            document.getElementById('legend-limited').textContent = translations[lang].legendLimited;
            document.getElementById('legend-closed').textContent = translations[lang].legendClosed;
            document.getElementById('legend-holiday').textContent = translations[lang].legendHoliday;
            document.getElementById('calendar-note').textContent = translations[lang].calendarNote;
            
            // Update about section
            document.getElementById('journey-title').textContent = translations[lang].journeyTitle;
            document.getElementById('journey-text').innerHTML = translations[lang].journeyText;
            document.getElementById('journey-text2').innerHTML = translations[lang].journeyText2;
            document.getElementById('journey-text3').innerHTML = translations[lang].journeyText3;
            
            document.getElementById('philosophy-title').textContent = translations[lang].philosophyTitle;
            document.getElementById('philosophy1-title').textContent = translations[lang].philosophy1Title;
            document.getElementById('philosophy1-text').textContent = translations[lang].philosophy1Text;
            document.getElementById('philosophy2-title').textContent = translations[lang].philosophy2Title;
            document.getElementById('philosophy2-text').textContent = translations[lang].philosophy2Text;
            document.getElementById('philosophy3-title').textContent = translations[lang].philosophy3Title;
            document.getElementById('philosophy3-text').textContent = translations[lang].philosophy3Text;
            
            document.getElementById('ritual-title').textContent = translations[lang].ritualTitle;
            document.getElementById('ritual-text').textContent = translations[lang].ritualText;
            document.getElementById('ritual1').innerHTML = translations[lang].ritual1;
            document.getElementById('ritual2').innerHTML = translations[lang].ritual2;
            document.getElementById('ritual3').innerHTML = translations[lang].ritual3;
            document.getElementById('ritual-text2').textContent = translations[lang].ritualText2;
            
            // Update footer
            document.getElementById('footer-text').textContent = translations[lang].footerText;
            document.getElementById('disclaimer').textContent = translations[lang].disclaimer;
            
            // Update language buttons
            document.querySelectorAll('.lang-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.getElementById(`lang-${lang}`).classList.add('active');
            
            // Update service options based on language
            displayServices();
        }

        // Initialize language
        document.addEventListener('DOMContentLoaded', () => {
            setLanguage('en');
            
            // Language button event listeners
            document.getElementById('lang-en').addEventListener('click', () => setLanguage('en'));
            document.getElementById('lang-id').addEventListener('click', () => setLanguage('id'));
            document.getElementById('lang-kr').addEventListener('click', () => setLanguage('kr'));
        });

